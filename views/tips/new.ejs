

<form method="POST" action="/quizzes/<%= quiz.id %>/tips/">

    <div class="wideRow">

        <span class="itemNarrow">Nueva pista:</span>

    <input type="text" class="itemWide" id="tip" name="text" value="" placeholder="Pista" autocomplete="off" />

    <button type="submit" class="itemNarrow">Añadir</button>
    </div>

</form>
<ul>
    <% for (var i in tips) { %>
    <% var tip = tips[i]; %>

    <% var accepted = tip.accepted; %>
    <% var isAdmin = session.user && session.user.isAdmin; %>
    <% var isQuizAuthor = session.user && quizAuthorId && quizAuthorId === session.user.id; %>

    <% if (accepted || isAdmin || isQuizAuthor || session.user ) { %>
    <li>
        <%= tip.text %>
        <small>(by <span id="autor"><%= quiz.Tips[i].Author.username ? quiz.Tips[i].Author.username : "Anómino" %></span>)</small>

        <% if (!accepted && (isAdmin || isQuizAuthor)) { %>

        <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>/accept?_method=PUT">
            <button>Aceptar</button>
        </a>

        <% } %>

        <% if (isAdmin || isQuizAuthor || tip.AuthorId === session.user.id) { %>

        <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>?_method=DELETE">
            <button>Borrar</button>
        </a>

        <% } %>
    </li>
    <% } %>
    <% } %>
</ul>
